{
  "scripts": {
    "AXIA:clean": "shx rm -rf node_modules/.cache; docusaurus clear AXIA-wiki",
    "start": "yarn generateRegistryTable; docusaurus start AXIA-wiki --port 3000 --host 0.0.0.0",
    "preAXIA:build": "npm-run-all -ln AXIA:clean -p fetch generateRegistryTable mirror AXIA:copy-assets:* --aggregate-output",
    "AXIA:build": "cross-env BUILDING=true docusaurus build AXIA-wiki; node AXIA-wiki/postprocess",
    "AXIA:inject": "node --experimental-json-modules scripts/inject.mjs --rootDir AXIA-wiki/build/AXIA-wiki --node wss://rpc.AXIA.io",
    "AXIA:publish-gh-pages": "cross-env PUBLISHING=true docusaurus deploy AXIA-wiki",
    "AXIA:pdf": "yarn pdf --initialDocURLs \"http://localhost:3000/docs/getting-started\" --outputPDFFilename=\"AXIA-wiki/static/AXIA-wiki.pdf\" --coverTitle=\"AXIA WIKI\"",
    "copy:translations": "cp -R AXIA-wiki/translated_docs axialunar-guide ",
    "publish-gh-pages": "cd AXIA-wiki; docusaurus-publish",
    "write-translations": "docusaurus-write-translations",
    "version": "docusaurus-version",
    "rename-version": "docusaurus-rename-version",
    "crowdin-upload": "crowdin --config ../crowdin-docs-v1.yaml upload sources --auto-update -b master",
    "crowdin-download": "crowdin --config ../crowdin-docs-v1.yaml download -b master",
    "generateRegistryTable": "node --experimental-json-modules scripts/generateRegistryTable.mjs > docs/build-ss58-registry.md",
    "generateErrorTable": "node --experimental-json-modules scripts/generateErrorTable.mjs >> docs/maintain-errors.md",
    "AXIA:crowdin:upload:source": "crowdin upload sources --config ./crowdin.yaml -b master",
    "AXIA:crowdin:download:ru": "crowdin download --config ./crowdin.yaml -b master -l ru",
    "AXIA:crowdin:download:zh-CN": "crowdin download --config ./crowdin.yaml -b master -l zh-CN",
    "AXIA:copy-assets:ru": "shx mkdir -p AXIA-wiki/i18n/ru-RU/docusaurus-plugin-content-docs/current; shx cp -R docs/assets AXIA-wiki/i18n/ru-RU/docusaurus-plugin-content-docs/current",
    "AXIA:copy-assets:zh-CN": "shx mkdir -p AXIA-wiki/i18n/zh-CN/docusaurus-plugin-content-docs/current; shx cp -R docs/assets AXIA-wiki/i18n/zh-CN/docusaurus-plugin-content-docs/current",
    "pdf": "npx mr-pdf --contentSelector=\"article\" --paginationSelector=\".pagination-nav__item--next > a\" --pdfFormat=\"A4\" --pdfMargin=\"90,60,80,60\"",
    "fetch": "node --experimental-json-modules scripts/fetch.mjs --isAXIA",
    "mirror": "node --experimental-json-modules scripts/mirror.mjs",
    "crowdin": "crowdin",
    "docusaurus": "docusaurus",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@actions/core": "^1.5.0",
    "@actions/github": "^5.0.0",
    "@axia-js/api": "0.1.1",
    "@axia-js/keyring": "0.1.2",
    "@crowdin/cli": "^3.6.5",
    "@docusaurus/core": "^2.0.0-beta.15",
    "@docusaurus/module-type-aliases": "^2.0.0-beta.15",
    "@docusaurus/plugin-client-redirects": "^2.0.0-beta.15",
    "@docusaurus/preset-classic": "^2.0.0-beta.15",
    "@octokit/rest": "^18.10.0",
    "axios": "^0.21.4",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "ipfs-http-client": "^52.0.2",
    "katex": "^0.13.18",
    "loud-rejection": "^2.2.0",
    "mr-pdf": "^1.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "pretty-quick": "^3.1.1",
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.3",
    "react-dom": "^17.0.2",
    "remarkable-katex": "^1.1.8",
    "shx": "^0.3.3",
    "unist-util-visit": "2.0.3",
    "yargs": "^17.1.1"
  },
  "dependencies": {
    "@axia-js/util": "0.1.0",
    "@axia-js/wasm-crypto": "0.1.2",
    "@docusaurus/theme-live-codeblock": "^2.0.0-beta.15",
    "ansi-html": "^0.0.7",
    "immer": "^9.0.6",
    "remark-docusaurus-tabs": "^0.1.0",
    "replace-in-file": "^6.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
